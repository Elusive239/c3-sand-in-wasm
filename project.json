{
  "langrev": "1",
  "warnings": [ "no-unused" ],
  "authors": [ "Elusive239 <@elusive-noir.bsky.social"],
  "version": "0.1.0",
  "sources": [ "src/**"],//, "assets/**" ],
  "test-sources": [ "test/**" ],
  "output": "build",
  "cc": "CL",
  "targets": {
    "proj": {
      "type": "executable",
      "exec": ["c3c run packer"],
    },
    "packer":{
      "dependencies": [ "stb" ],
      "dependency-search-paths": [ "lib" ],
      "type": "executable",
      "name": "packer",
      "opt": "O5",
      // "output": "./scripts",
      "sources-override": [ "scripts/**", "src/logging.c3", "src/render_common.c3"],
      "output": "build",
      // "exec": ["pwd"],
      // "exec": ["CL -I . -fPIC -c stb_image.c -o stb_image.obj"],
    },
    "wasm": {
      "name": "out",
      "target": "wasm32",
      "type": "executable",
      "reloc": "none",
      "link-libc": false,
      "no-entry": true, 
      "opt": "O5",
      "output": ".",
      "exec": ["c3c run packer"],
    }
  },
  "cpu": "generic",
  // Optimization: "O0", "O1", "O2", "O3", "O4", "O5", "Os", "Oz".
  "opt": "O0",
}